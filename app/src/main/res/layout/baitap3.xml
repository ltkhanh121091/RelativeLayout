<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:text="JavaCoBan"
        android:textSize="40sp"
        android:background="#333399"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/textviewred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DD0000"
        android:text="Red"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textviewgreen"
        android:layout_below="@+id/textviewred"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/textviewred"
        android:text="Green"
        android:textSize="40sp"
        android:background="#00FF00"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewblue"
        android:layout_below="@+id/textviewgreen"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/textviewred"
        android:text="Blue"
        android:textSize="40sp"
        android:background="#000099"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textvieworange"
        android:layout_below="@+id/textviewblue"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/textviewred"
        android:text="Orange"
        android:textSize="40sp"
        android:background="#EE9A00"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewgray"
        android:layout_below="@+id/textvieworange"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/textviewred"
        android:text="Gray"
        android:textSize="40sp"
        android:background="#808080"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewprink"
        android:layout_below="@+id/textviewgray"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/textviewred"
        android:text="Prink"
        android:textSize="40sp"
        android:background="#FF00FF"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
